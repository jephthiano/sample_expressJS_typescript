{
  "name": "sample-api-express-js-(import)",
  "version": "1.0.0",
  "description": "A boilerplate Express.js (ESM `import) API project for rapid backend development. This project is designed to help you kickstart any API-based service quickly, with built-in user authentication and OTP-based signup options. this project is designed with clean architecture",
  "main": "dist/server.js",
  "author": "jephthah oladejo",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "prestart": "npm run build",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "start:worker": "node dist/src/workers/index.js",
    "dev": "nodemon server.ts --exec ts-node",
    "dev:worker": "nodemon src/workers/index.ts --exec ts-node"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bullmq": "^5.52.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.0",
    "express-xss-sanitizer": "^1.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.8.0",
    "mongoose": "^8.5.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.15",
    "redis": "^5.1.1",
    "rimraf": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "validator": "^13.12.0",
    "wwebjs-mongo": "^1.1.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/node": "^24.1.0",
    "nodeman": "^1.1.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "imports": {
    "#src/*": "./dist/src/*",
    "#config/*": "./dist/src/configs/*",
    "#dto/*": "./dist/src/dtos/*",
    "#controller/*": "./dist/src/controllers/*",
    "#route/*": "./dist/src/routes/*",
    "#model/*": "./dist/src/models/*",
    "#database/*": "./dist/src/databases/*",
    "#service/*": "./dist/src/services/*",
    "#repository/*": "./dist/src/repositories/*",
    "#middleware/*": "./dist/src/middlewares/*",
    "#resource/*": "./dist/src/resources/*",
    "#queue/*": "./dist/src/queues/*",
    "#worker/*": "./dist/src/workers/*",
    "#core_util/*": "./dist/src/utils/cores/*",
    "#validator_util/*": "./dist/src/utils/validators/*",
    "#main_util/*": "./dist/src/utils/mains/*",
    "#service_util/*": "./dist/src/utils/services/*"
  },
  "keywords": []
}
